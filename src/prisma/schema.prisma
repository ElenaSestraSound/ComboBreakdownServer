datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Character {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  bio      String
  height   String
  like     String
  notlike  String
  weight   String
  vitality Int
  moves    Move[]
}

model Move {
  id                    String     @id @default(auto()) @map("_id") @db.ObjectId
  name                  String
  type                  String?
  image                 String?
  classic               String?
  modern                String?
  manual                String?
  note                  String?
  driveGauge            String?
  video                 String?
  definition            String?
  startup               Int?
  active                String?
  missRecovery          Int?
  hitStunRecovery       Int?
  blockStunRecovery     Int?
  cancelable            String?
  damage                Int?
  scaling               String?
  driveIncreaseHit      Int?
  driveDecreaseBlock    Int?
  driveDecreasePunish   Int?
  superArtGaugeIncrease Int?
  properties            String?
  miscellaneous         String?
  Character             Character? @relation(fields: [characterId], references: [id])
  characterId           String?    @db.ObjectId
}

model SuperUser {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  username String @unique
  password String
}
