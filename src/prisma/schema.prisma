datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Character {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  bio      String
  like     String
  notlike  String
  height   String
  weight   String
  vitality Int
  moves    Move[]
}

model Move {
  id                    String    @id @default(auto()) @map("_id") @db.ObjectId
  character             Character @relation(fields: [characterId], references: [id])
  characterId           String    @db.ObjectId
  name                  String
  type                  String
  note                  String?
  driveGauge            Int?
  video                 String?
  definition            String?
  classic               String
  modern                String?
  manual                String?
  startup               Int?
  active                String?
  missRecovery          Int?
  hitStunRecovery       Int?
  blockStunRecovery     Int?
  cancelable            String?
  damage                Int?
  driveIncreaseHit      Int?
  driveDecreaseBlock    Int?
  driveDecreasePunish   Int?
  superArtGaugeIncrease Int?
  properties            String?
  scaling               String?
  miscellaneus          String?
}
